<main>
<section class="info-section">
    <!-- Health and Safety Protocols -->
    <h2>Health and Safety Protocols</h2>
    <p>Follow on-site guidelines, stay on marked trails, and be prepared for changing weather.</p>

    <!-- Facilities & Accessibility -->
    <h2>Facilities & Accessibility</h2>
    <p>Toilets available near the main entrance, wheelchair-accessible paths, and picnic areas.</p>

    <!-- Site Rules and Regulations -->
    <h2>Site Rules and Regulations</h2>
    <p>No littering, no picking flowers or disturbing wildlife. Pets must be on a leash.</p>
</section>

<section class="contact-form-section">
    <!-- Contact Form -->
    <h2>Contact Us</h2>
    <!-- Display success message if the success query parameter is present -->
    <% if (req.query.success) { %>
        <p class="success-message">Thank you for contacting us! We will get back to you shortly.</p>
    <% } %>
    <form method="post" action="/users/contact">
        <!-- Name Input -->
        <label for="contact-name">Name:</label>
        <input type="text" id="contact-name" name="name" required>

        <!-- Email Input -->
        <label for="contact-email">Email:</label>
        <input type="email" id="contact-email" name="email" required>

        <!-- Message Input -->
        <label for="contact-msg">Message:</label>
        <textarea id="contact-msg" name="message" required></textarea>

        <!-- Submit Button -->
        <button type="submit">Submit</button>
    </form>
</section>
</main>